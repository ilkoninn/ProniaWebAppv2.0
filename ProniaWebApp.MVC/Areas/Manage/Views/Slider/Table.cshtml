@using ProniaWebApp.Core.Entities
<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-flex justify-content-between">
        <h1 class="h3 mb-2 text-gray-800">Slider Table</h1>
        <a asp-controller="Slider" asp-action="Create" class="btn btn-primary">Create</a>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4 mt-5">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No:</th>
                            <th>Title</th>
                            <th>Sub Title</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Created Date</th>
                            <th>Last Updated Date</th>
                            <th>Change Section</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>No:</th>
                            <th>Title</th>
                            <th>Sub Title</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Created Date</th>
                            <th>Last Updated Date</th>
                            <th>Change Section</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @{
                            var count = 0;
                        }
                        @foreach (var item in ViewData["Sliders"] as IQueryable<Slider>)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <th>@item.Title</th>
                                <th>@item.SubTitle</th>
                                <th>@item.Discount</th>
                                <th>
                                    <div style="width:100px">
                                        <img width="100%" src="~/Upload/SliderImages/@item.ImgUrl">
                                    </div>
                                </th>
                                <td>
                                    @item.CreatedDate.ToString("HH:mm")
                                    <br />
                                    @item.CreatedDate.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    @item.UpdatedDate.ToString("HH:mm")
                                    <br />
                                    @item.UpdatedDate.ToString("dd/MM/yyyy")
                                </td>
                                <th>
                                    <a class="btn btn-warning" asp-action="Update" asp-controller="Slider" asp-route-id="@item.Id">Update</a>
                                    <a class="btn btn-info" asp-action="Detail" asp-controller="Slider" asp-route-id="@item.Id">Detail</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Slider" asp-route-id="@item.Id">Delete</a>
                                </th>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>